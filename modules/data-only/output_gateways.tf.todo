# igw
output "igw_arn" {
    value = length(data.aws_arn.igw.*.resource) > 0 ? data.aws_internet_gateway.igw.0.arn : null
}

output "igw_id" {
    value = length(data.aws_arn.igw.*.resource) > 0 ? split("/", data.aws_arn.igw.0.resource)[1] : null
}

