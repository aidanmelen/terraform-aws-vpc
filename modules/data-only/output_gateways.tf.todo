output "nat_ids" {
    value = [ for n in data.aws_nat_gateway.nat : n.allocation_id ]
}

output "nat_public_ips" {
    value = [ for n in data.aws_nat_gateway.nat : n.public_ip ]
}

output "natgw_ids" {
    value = [ for n in data.aws_nat_gateway.nat : n.id ]
}

